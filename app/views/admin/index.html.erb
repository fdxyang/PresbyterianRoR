Admin Login Status: <%=@is_admin %>

<% if @is_admin %>
    <%= form_tag('/admin/logout', method: "post") do %>
        <%= submit_tag("Logout") %>
    <% end %>
<% else %>
    <%= form_tag('/admin/login', method: "post") do %>
        <%= label_tag(:q, "Account:") %>
        <%= text_field_tag(:q) %>
        <%= label_tag(:q, "password:") %>
        <%= text_field_tag(:q) , :name = 'password' %>
        <%= submit_tag("Login") %>
    <% end %>
<% end%>
